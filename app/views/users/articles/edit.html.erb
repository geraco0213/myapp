<h1 class="text-center">記事の編集</h1>
<div class="row">
  <div class="col-md-6 offset-3">
    <%= form_with(model:@article,url:users_article_path, method: :patch, local: true) do |f| %>
      <%
=begin%>
 <%= render 'devise/shared/error_messages',resource:@article %> 
<%
=end%>
      
      <%= f.label:title, class: "label-form" %>
      <%= f.text_field:title, class: "form-control" %>
      
      <%= f.label :content, class: "label-form" %>
      <%= f.text_area :content, rows:5, class: "form-control" %>
      
      <%
=begin%>
<%= f.label :img, class: "label-form" %> 
<%
=end%>
      <%
=begin%>
 <%= f.file_field :img, id: :post_img %> 
<%
=end%>
      <div class="btn-article">
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
      <%= link_to "戻る", users_article_path %>
    <% end %>
    
  </div>
</div>


